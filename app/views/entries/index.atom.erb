<% require "atom/feed" %>
<%
   counter = 1
%>
<%=
    Atom::Feed.generate(id: Time.now.to_i.to_s, title: "/#{@section_name}") do |feed|
      feed.entries(@entries) do |entry|
        render(partial: "entry", locals: {feed: feed, entry: entry, counter: counter})
        counter += 1
      end
    end
%>