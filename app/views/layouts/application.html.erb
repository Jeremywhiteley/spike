<!DOCTYPE html>
<html>
<head>
  <title>PDMP Core</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inner navbar-static-top">
  <div class="container">
    <p class="navbar-text pull-right">
      <%= yield(:authn) %>
    </p>
    <a class="brand" href="/">PDMP Core</a>
  </div>
</div>

<% if flash[:notice] %>
<div class="container alert alert-success"><%= notice %></div>
<% end %>
<% if flash[:alert] %>
<div class="container alert"><%= alert %></div>
<% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
