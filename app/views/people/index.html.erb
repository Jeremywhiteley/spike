<div id="people_search" class="span4 pull-right">
<%= simple_form_for people_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil, :class => "btn" %>
<% end %>
</div>

<h1>People</h1>

<%= render "results" %>

<%= link_to new_person_path do %>
<i class="icon-plus"></i> New Person
<% end %>
