<%= simple_form_for @person do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :given_name %>
  <%= f.input :family_name %>
  <%= f.association :sex, label_method: :display_name %>
  <%= f.input :birthdate, :include_blank => true, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12 %>
  <%= f.simple_fields_for :address, @person.address do |a| %>
  <%= a.input :street %>
  <%= a.input :city %>
  <%= a.input :state, :collection => state_codes %>
  <%= a.input :postal_code %>
  <% end %>

  <%= f.button :wrapped, :cancel => people_path %>
<% end %>
