<%= simple_form_for @prescription do |f| %>
  <%= f.error_notification %>

    <%= f.input :patient_id, :collection => Person.all.collect {|p| [ p.name, p.id ] } %>
    <%= f.input :prescriber_id, :collection => Person.all.collect {|p| [ p.name, p.id ] } %>
    <%= f.input :drug_id, :collection => Drug.all.collect {|p| [ p.name, p.id ] } %>
    <%= f.input :when_written %>
    <%= f.button :wrapped, :cancel => prescriptions_path %>
<% end %>
